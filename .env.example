# JIRA Configuration
# Replace these values with your actual JIRA instance details

# JIRA Cloud URL (e.g., https://yourcompany.atlassian.net)
JIRA_URL=https://yourcompany.atlassian.net

# JIRA username (email address for Atlassian Cloud)
JIRA_USERNAME=your.email@company.com

# JIRA API Token (generate from Account Settings > Security > API tokens)
JIRA_API_TOKEN=your_api_token_here

# JIRA Project key where tickets will be created
JIRA_PROJECT=DCOPS

# Default assignee for tickets (username or email)
JIRA_ASSIGNEE=datacenter.ops

# JIRA issue type for created tickets
JIRA_ISSUE_TYPE=Task

# Webhook Authentication (optional)
WEBHOOK_USERNAME=webhook_user
WEBHOOK_PASSWORD=webhook_pass

# Logging Configuration
LOG_LEVEL=INFO

# Optional: Custom field mappings (if your JIRA has custom fields)
# JIRA_CUSTOM_FIELD_ALERT_SOURCE=customfield_10001
# JIRA_CUSTOM_FIELD_SEVERITY=customfield_10002
