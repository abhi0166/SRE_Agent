modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["mongodb"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Webhook Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Enterprise Storage Dashboard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Continuous Storage Monitor"

[[workflows.workflow]]
name = "Webhook Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Enterprise Storage Dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python monitoring/enterprise_storage_dashboard.py"
waitForPort = 3000

[[workflows.workflow]]
name = "Continuous Storage Monitor"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd monitoring && python storage_alert_generator.py --interval 60"

[deployment]
run = ["sh", "-c", "pip3 install flask requests python-dotenv && echo \"Dependencies installed successfully\""]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80
